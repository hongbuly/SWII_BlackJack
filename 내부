import random

#카드 리셋(카드 카운팅 견제,매 게임마다 리셋)
def cardreset():
    mark = ['♠', '◆', '♥', '♣']
    card = []
    special =['A', 'J', 'Q', 'K']
    for i in mark:
        for j in range(2,11):
            j = str(j)
            card.append(i+j)
    for i in mark:
        for j in special:
            card.append(i+j)
    print(card)


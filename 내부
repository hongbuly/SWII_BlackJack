#새로운 카드 받기
def cardappend():
    cardlist.append(random.choice(card))
    card.remove(cardList[-1])
    
#카드 리셋 > 두장뽑기 > 카운트 실행시 뽑은 카드와 카드 숫자합,문자카드는 구현 X


#1.카드 세팅
mark = ['♠', '◆', '♥', '♣']
card = []
#special =['A', 'J', 'Q', 'K']
for i in mark:
    for j in range(2,11):
        j = str(j)
        card.append(i+j)
#for i in mark:
#   for j in special:
#       card.append(i+j)

#플레이어 카드 두장
print('Player')
playerList = random.sample(card, 2)
for i in playerList:
    card.remove(i)
print(playerList)

resultPlayer = 0

for i in playerList:
    i = int(i[1:])
    resultPlayer += i

print(resultPlayer)

#딜러 카드 세장
print('Dealer')
dealerList = random.sample(card, 2)
for i in dealerList:
    card.remove(i)

dealerList.append(random.choice(card))
card.remove(dealerList[-1])
print(dealerList)

resultDealer = 0

for i in dealerList:
    i = int(i[1:])
    resultDealer += i

print(resultDealer)

